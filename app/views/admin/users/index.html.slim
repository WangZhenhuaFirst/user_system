
.search
  = search_form_for [:admin, @q] do |f| 
    = f.search_field :name_eq, class:"search-box", placeholder:"请输入用户名" 
    = f.submit class:"btn btn-info" 
  

  

.tab-content
  #tab-1.tab-pane.active
    .full-height-scroll
      .table-responsive
        table.table.table-striped.table-hover
          thead
            tr
              td 姓名
              td 邮箱
              td 手机号
              td 管理员
              td 备注
          tbody
            - @users.each do |user| 
              tr          
                td
                  = link_to(user.name, user_path(user))
                td 
                  = user.email                   
                td 
                  = user.telephone  
                td.contact-type
                  = user.is_admin 
                td.client-status 
                  = user.remark 
                td
                  = link_to("Edit", edit_admin_user_path(user), class: "btn btn-sm btn-default") 

                  = link_to("Delete", admin_user_path(user), class:"btn btn-sm btn-default", method: :delete, data:{confirm:"Are you sure?"})              
                
                    

    
                        
                                                
                                                 